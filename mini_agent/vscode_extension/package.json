{"name": "mini-agent-vscode", "displayName": "Mini-Agent AI Assistant", "description": "AI coding assistant powered by Mini-Agent with Chat API integration", "version": "1.0.0", "publisher": "Mini-Agent", "engines": {"vscode": "^1.82.0"}, "categories": ["Other", "Machine Learning", "Extension Packs"], "keywords": ["ai", "assistant", "chat", "mini-agent", "coding"], "activationEvents": ["onCommand:miniAgent.activate", "onStartupFinished"], "main": "./chat_integration_extension.js", "contributes": {"commands": [{"command": "miniAgent.activate", "title": "Mini-Agent: Open Assistant", "category": "Mini-Agent"}, {"command": "miniAgent.ask", "title": "Mini-Agent: Ask Question", "category": "Mini-Agent"}, {"command": "miniAgent.explain", "title": "Mini-Agent: Explain Code", "category": "Mini-Agent"}, {"command": "miniAgent.generate", "title": "Mini-Agent: Generate Code", "category": "Mini-Agent"}, {"command": "miniAgent.refactor", "title": "Mini-Agent: Refactor Code", "category": "Mini-Agent"}, {"command": "miniAgent.test", "title": "Mini-Agent: Generate Tests", "category": "Mini-Agent"}, {"command": "miniAgent.reset", "title": "Mini-Agent: Reset Session", "category": "Mini-Agent"}], "keybindings": [{"command": "miniAgent.ask", "key": "ctrl+shift+a", "mac": "cmd+shift+a"}, {"command": "miniAgent.explain", "key": "ctrl+shift+e", "mac": "cmd+shift+e"}, {"command": "miniAgent.generate", "key": "ctrl+shift+g", "mac": "cmd+shift+g"}], "menus": {"editor/context": [{"command": "miniAgent.explain", "when": "editorHasSelection", "group": "miniAgent@1"}, {"command": "miniAgent.refactor", "when": "editorHasSelection", "group": "miniAgent@2"}, {"command": "miniAgent.test", "when": "editorHasSelection", "group": "miniAgent@3"}], "explorer/context": [{"command": "miniAgent.generate", "when": "resourceExtname == .py || resourceExtname == .js || resourceExtname == .ts", "group": "miniAgent@1"}]}, "chatParticipants": [{"id": "mini-agent", "name": "mini-agent", "description": "AI coding assistant powered by Mini-Agent", "when": "true"}], "views": {"explorer": [{"id": "miniAgentView", "name": "Mini-Agent", "when": "true"}]}, "viewsContainers": {"activitybar": [{"id": "miniAgent", "title": "Mini-Agent", "icon": "$(robot)"}]}}, "scripts": {"vscode:prepublish": "npm run compile", "compile": "tsc -p ./", "watch": "tsc -watch -p ./"}, "devDependencies": {"@types/vscode": "^1.82.0", "typescript": "^4.9.4"}, "dependencies": {"@types/node": "^18.0.0"}, "license": "MIT", "repository": {"type": "git", "url": "https://github.com/0xSero/Mini-Agent.git"}, "bugs": {"url": "https://github.com/0xSero/Mini-Agent/issues"}, "homepage": "https://github.com/0xSero/Mini-Agent#readme", "aiKey": "", "chat": {"history": {"iconPath": "$(history)"}}}